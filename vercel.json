{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "memory": 512,
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  },
  "crons": [
    {
      "path": "/api/cron/crawl-g2b",
      "schedule": "0 8,12,18 * * *"
    },
    {
      "path": "/api/cron/morning-digest",
      "schedule": "30 8 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
